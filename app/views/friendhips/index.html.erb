<h2>Pending Invitations</h2>

<section class="users-section">
  <ul class="users-list">
    <% if @friendhips.length > 0 %>
      <% @friendhips.each do |friendhip| %>
        <%= render partial: "friendship", locals: { friendhip: friendhip } %>
      <% end %>
    <% else %>
      <li><p>No post available</p></li>
    <% end %>
  </ul>
</section>